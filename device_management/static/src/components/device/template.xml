<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="device_management.DemoTemplateBooleanToggle">
        <div class="form-check form-switch">
        <input t-on-click="onClick" class="form-check-input"
               t-attf-style="{{props.state.value ? 'background-color:blue;':'background-color:red;'}}"
               t-attf-checked="{{props.state.value}}"
               type="checkbox"></input>
        </div>
    </t>

</templates>